<Controls:MetroWindow x:Class="SincronosXMLFiscal.View.WndPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Leitor XML Fiscal" Height="468.385" Width="595.745" WindowStartupLocation="CenterScreen" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition Height="412*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>


        <TabControl Grid.Row="1" Grid.Column="1" >

            <TabItem Header="NFC-e" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37*"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="293*"/>
                        <RowDefinition Height="33*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="475*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="txtCaminhoArquivo" Text="{Binding TxtCaminhoArquivo,Mode=TwoWay}" Grid.Column="1" Margin="3,0,3,3" VerticalAlignment="Bottom" Height="26" />

                    <DataGrid x:Name="dgNFCE" Grid.Column="1" Margin="3" Grid.Row="2" Grid.ColumnSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Número"/>
                            <DataGridTextColumn Header="Chave"/>
                            <DataGridTextColumn Header="Emissão"/>
                            <DataGridTextColumn Header="Status"/>
                            <DataGridTextColumn Header="Total" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button x:Name="btnFolder" Content="Abrir pasta" Command="{Binding CaminhoPastaXMLCommand}" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="3,0,0,3" Height="25" Width="73"/>
                    <Button Content="Processar" Command="{Binding ProcessarCommand}" Grid.Column="2" HorizontalAlignment="Left" Margin="3,3,3,3" Grid.Row="3" VerticalAlignment="Top" Width="70"/>

                </Grid>
            </TabItem>


        </TabControl>


    </Grid>


</Controls:MetroWindow>
